            <label for="login-email">Email</label>
            <input
              name="email"
              id="email"
              type="email"
              class="form-control"
              placeholder="email@example.com"
              required
            />
          </div>
          <div class="form-group mb-2">
            <label for="login-password">Password</label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              placeholder="Password"
              required
            />
          </div>
          <button type="submit" class="btn btn-outline-secondary mt-2" id="signIn">
            Sign in
          </button>
        </form>
      </div>

